<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.home.homework7.MainActivity">

    <TextView
        android:text="간단한 계산기 만들기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Result"
        android:width="100dp"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/Divbtn"
        android:layout_alignEnd="@+id/Divbtn"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

    <Button
        android:text="더하기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/Addbtn"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <Button
        android:text="빼기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Subbtn"
        android:layout_alignBaseline="@+id/Addbtn"
        android:layout_alignBottom="@+id/Addbtn"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />

    <Button
        android:text="곱하기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Mulbtn"
        android:layout_alignBaseline="@+id/Divbtn"
        android:layout_alignBottom="@+id/Divbtn"
        android:layout_alignLeft="@+id/Addbtn"
        android:layout_alignStart="@+id/Addbtn" />

    <Button
        android:text="나누기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Divbtn"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/Subbtn"
        android:layout_alignLeft="@+id/Subbtn"
        android:layout_alignStart="@+id/Subbtn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="33dp"
        android:id="@+id/editText1"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editText1"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignStart="@+id/editText1" />

    <TextView
        android:text="계산결과 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="80dp"
        android:id="@+id/textView1"
        android:textSize="24sp"
        android:layout_below="@+id/Mulbtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="나머지"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Rembtn"
        android:layout_below="@+id/Mulbtn"
        android:layout_alignLeft="@+id/Mulbtn"
        android:layout_alignStart="@+id/Mulbtn"
        android:layout_marginTop="15dp" />

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/Clear"
        android:layout_below="@+id/Result"
        android:layout_alignLeft="@+id/Divbtn"
        android:layout_alignStart="@+id/Divbtn" />

</RelativeLayout>
